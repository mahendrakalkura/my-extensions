{
  "manifest_version": 3,
  "name": "My Extensions",
  "version": "1.0",
  "description": "Screenshot any element, expand content, summarize pages with Claude AI, and always show YouTube controls",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.claude.ai/*"
  ],
  "action": {
    "default_title": "Take screenshot"
  },
  "background": {
    "service_worker": "background.js"
  }
}
