{
  "manifest_version": 3,
  "name": "Div Screenshot",
  "version": "1.0",
  "description": "Click to select and screenshot any div on a webpage",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_title": "Screenshot a div"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube.js"],
      "css": ["youtube.css"],
      "run_at": "document_end"
    }
  ]
}
