{
  "manifest_version": 3,
  "name": "My Extensions",
  "version": "1.0",
  "description": "Screenshot any element on a webpage and always show YouTube controls",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_title": "Take screenshot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["youtube.css"],
      "run_at": "document_start"
    }
  ]
}
