{
  "manifest_version": 3,
  "name": "My Extensions",
  "version": "1.0",
  "description": "Screenshot any element, expand content, and summarize pages with AI services",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.claude.ai/*",
    "*://*.deepseek.com/*",
    "*://gemini.google.com/*",
    "*://grok.com/*",
    "*://*.openai.com/*",
    "*://chatgpt.com/*",
    "*://*.qwen.ai/*"
  ],
  "action": {
    "default_title": "Take screenshot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.atlassian.net/*"],
      "css": ["atlassian.css"],
      "run_at": "document_start"
    }
  ]
}
